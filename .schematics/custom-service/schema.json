{
  "$schema": "http://json-schema.org/schema",
  "$id": "CustomServiceSchema",
  "title": "Custom Service Options",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Nome do service",
      "$default": {
        "$source": "argv",
        "index": 0
      }
    },
    "path": {
      "type": "string",
      "description": "Caminho do diretório onde o service será criado",
      "default": "src/app/services"
    }
  },
  "required": ["name"]
}