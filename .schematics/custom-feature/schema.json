{
  "$schema": "http://json-schema.org/schema",
  "$id": "CustomFeatureSchema",
  "title": "Custom Feature Options",
  "type": "object",
  "properties": {
     "name": {
      "type": "string",
      "description": "Nome do service a ser criado (sem sufixo Service).",
      "$default": {
        "$source": "argv",
        "index": 0
      }
    },
    "feature": {
      "type": "string",
      "description": "Nome da feature alvo (arquivo .feature.ts).",
      "$default": {
        "$source": "argv",
        "index": 1
      }
    },
    "path": {
      "type": "string",
      "description": "Caminho do diretório onde o Feature será criado"
    }
  },
  "required": ["name", "feature"]
}